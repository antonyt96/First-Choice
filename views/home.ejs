<% include header %>
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <h5 class="modal-title" id="modalLabel">Testimonial</h5>
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
	          <span aria-hidden="true">&times;</span>
	        </button>
	      </div>
	      <div class="modal-body">
	        <form action="/testimonial" method="POST" class="ml-auto mr-auto">

				<div class="form-group">
					<label for="entityName"> Name or Company: </label>
					<input class="form-control" type="text" id="entityInput" name="entityName"></input>
				</div>

				<div class="form-group">
					<label for="tmessagebox"> Testimonial: </label>
					<textarea class="form-control"id="tmessagebox" name="tmessage" rows="5" cols="50">

					</textarea>
				</div>

				<button type="submit" value="Submit" class="btn btn-primary btn-block"> SUMBIT </button>
			</form>
	      </div>
	    </div>
	  </div>
</div>

<div class = "container-fluid">
	
	<div class="row">	
		<div class="col-lg-3">
		</div>
		<div class="col-lg-6">
		  	<img class="mx-auto d-block jumboimg" src="/images/pic.png">
			<hr class="my-4">
			<p id="home-headline">Complete Interior and Exterior Detailing of Cars, Trucks, and Boats. We Come To Your Home or Office!</p>
			<p class="text-center">
				<a class="btn btn-primary btn-lg jumbo-btn" href="/contact" role="button">Get an Estimate</a>
			</p>
		</div>
		<div class="col-lg-3">
		</div>
	</div>
			
		
	
	<div class="row">	
		<div class="col-lg-2">
		</div>
		<div class="col-lg-8 col-sm-12 shadow pl-0 pr-0">
			<div id="demo" class="carousel slide" data-ride="carousel">

			  <!-- The slideshow -->
			  <div class="carousel-inner">
			    <div class="carousel-item active">
			      <img src="/images/undersideboat.jpg" alt="boat" class="mx-auto">
			     
			    </div>
			    <div class="carousel-item">
			      <img src="/images/undersideboat4.JPG" alt="boat">
			    
			    </div>
			    <div class="carousel-item">
			      <img src="/images/darkgreen_finished.jpeg" alt="New York">
			    
			    </div>
			    <div class="carousel-item">
			      <img src="/images/trailer.jpg" alt="New York">
			    
			    </div>
			  </div>

			  <!-- Left and right controls -->
			  <a class="carousel-control-prev" href="#demo" data-slide="prev">
			    <span class="carousel-control-prev-icon"></span>
			  </a>
			  <a class="carousel-control-next" href="#demo" data-slide="next">
			    <span class="carousel-control-next-icon"></span>
			  </a>

			</div>
		</div>
		<div class="col-lg-2">
		</div>
	</div>

	<div class="row">
		<h2 class="mx-auto"> Testimonials</h2>
	</div>
	<div class="row">
		<button type=button class="btn btn-primary mx-auto" data-toggle="modal" data-target="#modal"> 
			Post Testimonial
		</button>
	
	</div>

	<div class="row"  >
		<% testimonials.forEach(function(test){%>
			<div class="col-lg-4">
				<div class="card shadow-sm">
					<div class="card-body">
						<h6 class="card-title"> <%= test.entity %></h6>
						<hr class="my-4">
						<p class="card-text"> <%= test.text %></p>
					</div>
				</div>
			</div>

	<%	}); %>
			
	</div>
</div>


<% include footer %>